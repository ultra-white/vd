{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Заказы"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "full_name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "maxLength": 20,
      "required": true
    },
    "email": {
      "type": "string"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "payment_type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Наличные",
        "qr-код"
      ]
    },
    "delivery_method": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Курьер",
        "Яндекс доставка",
        "Почта России"
      ]
    },
    "order_status": {
      "type": "enumeration",
      "required": true,
      "default": "Создан",
      "enum": [
        "Создан",
        "Отправлено",
        "Доставлен"
      ]
    },
    "items": {
      "type": "dynamiczone",
      "components": [
        "order.product"
      ],
      "required": true
    }
  }
}
