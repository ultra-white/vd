{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Заказы"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "full_name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "maxLength": 20,
      "required": true
    },
    "email": {
      "type": "string"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "payment_type": {
      "type": "enumeration",
      "enum": [
        "cash",
        "qr"
      ]
    },
    "delivery_method": {
      "type": "enumeration",
      "enum": [
        "courier",
        "post"
      ]
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    }
  }
}
